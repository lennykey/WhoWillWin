<!Doctype html>
<html>
    <head>

        <style type="text/css">
        div[id*='team'] {
            color: green; 
        }
        </style>

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js" type="text/javascript">
        </script>
        <script type="text/javascript">
        /* alert('Cool'); */

        $(document).ready(function(){

            $('#teameins a').click(
                    function(){
                        $('#teama').html('<img src="/static/loading.gif" height="50px" width="50px" />');
                        alert($(this).text());
                        $.get('matchesfor/' + $(this).text(), function(data) {
                            $('#teama').html(data);
                        });    
                    }
            
            );
            
            $('#teameins input[type=button]').click(
                    function(){
                        $('#teama').html('<img src="/static/loading.gif" height="50px" width="50px" />');
                        alert( $('#inputTeamEins').val() );
                        $.get('matchesfor/' + $('#inputTeamEins').val() , function(data) {
                            $('#teama').html(data);
                        });    
                    }
            
            );
                

            $.get('matchesfor/SC Freiburg', function(data) {
                $('#teamb').html(data);
            });
        });

        
        </script>


    </head>
    <body>
    <div>${request}</div>
    
    <form id="teameins" action="#" method="get">
        <a href="#">FC Bayern MÃ¼nchen</a>
        <label>
        Team Eins:
        <input id="inputTeamEins" type="text" >
        </label>
        <input type="button" value="Suchen">
    </form> 


    <div style="float:left" id="teama"><img src="/static/loading.gif" height="50px" width="50px" /></div>
    <div style="float:left" id="teamb"><img src="/static/loading.gif" height="50px" width="50px" /></div>
    <div style="clear:both"></div>
    

    </body>
</html>
